# Things 3 MCP Server Configuration Example
# Copy this file to .env and customize the values as needed

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server identification
THINGS_MCP_SERVER_NAME=things3-mcp-server
THINGS_MCP_SERVER_VERSION=1.0.0
THINGS_MCP_SERVER_DESCRIPTION=MCP server for Things 3 task management integration

# =============================================================================
# APPLESCRIPT EXECUTION
# =============================================================================

# AppleScript execution timeout in seconds (1-300)
THINGS_MCP_APPLESCRIPT_TIMEOUT=30.0

# Number of retries for failed operations (0-10)
THINGS_MCP_APPLESCRIPT_RETRY_COUNT=3

# Execution method: url_scheme, applescript, or hybrid
THINGS_MCP_PREFERRED_EXECUTION_METHOD=hybrid

# =============================================================================
# TAG CREATION CONTROL
# =============================================================================

# Allow AI assistants to create new tags
# When false, AI can only use existing tags (human-only tag creation)
# When true, AI can create new tags as needed
THINGS_MCP_AI_CAN_CREATE_TAGS=false

# Enable case-sensitive tag validation
# When true, "Work" and "work" are treated as different tags
THINGS_MCP_TAG_VALIDATION_CASE_SENSITIVE=false

# Maximum number of tags that can be auto-created per operation (1-50)
# Prevents accidental creation of too many tags in bulk operations
THINGS_MCP_MAX_AUTO_CREATED_TAGS_PER_OPERATION=10

# =============================================================================
# CACHING
# =============================================================================

# Enable response caching
THINGS_MCP_ENABLE_CACHING=true

# Maximum number of items in cache (10-10000)
THINGS_MCP_CACHE_MAX_SIZE=1000

# Default TTL for cached items in seconds (10-3600)
THINGS_MCP_CACHE_DEFAULT_TTL=300

# Maximum memory usage for cache in MB (10-1000)
THINGS_MCP_CACHE_MEMORY_LIMIT=100

# =============================================================================
# LOGGING
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
THINGS_MCP_LOG_LEVEL=INFO

# Enable detailed logging including stack traces
THINGS_MCP_ENABLE_DETAILED_LOGGING=false

# Enable debug logging
THINGS_MCP_ENABLE_DEBUG_LOGGING=false

# Path to log file (optional - logs to stdout if not specified)
# Uncomment and set path to enable file logging
# THINGS_MCP_LOG_FILE_PATH=/var/log/things-mcp/server.log

# =============================================================================
# VALIDATION
# =============================================================================

# Maximum length for todo/project titles (50-1000)
THINGS_MCP_MAX_TITLE_LENGTH=500

# Maximum length for notes (100-50000)
THINGS_MCP_MAX_NOTES_LENGTH=10000

# Maximum number of tags per item (1-50)
THINGS_MCP_MAX_TAGS_PER_ITEM=20

# Maximum number of checklist items (1-200)
THINGS_MCP_MAX_CHECKLIST_ITEMS=50

# =============================================================================
# PERFORMANCE
# =============================================================================

# Maximum concurrent AppleScript operations (1-50)
THINGS_MCP_MAX_CONCURRENT_OPERATIONS=10

# Maximum items in batch operations (10-1000)
THINGS_MCP_BATCH_OPERATION_MAX_SIZE=100

# Default maximum search results (10-1000)
THINGS_MCP_SEARCH_RESULTS_LIMIT=100

# =============================================================================
# SECURITY
# =============================================================================

# Enable input sanitization for AppleScript
THINGS_MCP_ENABLE_INPUT_SANITIZATION=true

# Allowed hosts for server access
# Must be a valid JSON array format for pydantic-settings v2
# Example: ["localhost","127.0.0.1","192.168.1.100"]
THINGS_MCP_ALLOWED_HOSTS=["localhost","127.0.0.1"]

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
THINGS_MCP_ENABLE_EXPERIMENTAL_FEATURES=false

# Enable analytics and statistics collection
THINGS_MCP_ENABLE_ANALYTICS=true

# Enable health check endpoints
THINGS_MCP_ENABLE_HEALTH_CHECKS=true

# =============================================================================
# THINGS 3 INTEGRATION
# =============================================================================

# Name of the Things 3 application
THINGS_MCP_THINGS_APP_NAME=Things3

# Base URL for Things 3 URL schemes
THINGS_MCP_THINGS_URL_SCHEME_BASE=things:///

# Verify Things 3 is available on startup
THINGS_MCP_VERIFY_THINGS_AVAILABILITY=true

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Enable mock mode for testing without Things 3
THINGS_MCP_ENABLE_MOCK_MODE=false

# Path to mock data file for testing (optional)
# Uncomment and set path to use custom mock data
# THINGS_MCP_MOCK_DATA_PATH=/path/to/mock_data.json